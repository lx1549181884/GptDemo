<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.rick.openaidemo.vm.UpgradeVm" />

        <variable
            name="dialog"
            type="com.rick.openaidemo.util.UpgradeUtil" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/space">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="发现新版本：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{vm.versionInfo.versionShort}"
                tools:text="V1.0.0.1" />

            <Button
                upgradeProgress="@{vm.progress}"
                upgradeState="@{vm.state}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{()-> vm.state == 2 ? dialog.install():dialog.startDownload()}"
                tools:text="立即升级" />
        </LinearLayout>
    </LinearLayout>
</layout>